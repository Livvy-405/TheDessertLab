# .env.example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/dessert_lab
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dessert_lab

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRE=7d

# Email Configuration (Gmail)
EMAIL_USER=your_gmail@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Admin Email (where notifications are sent)
ADMIN_EMAIL=admin@dessertlab.com

# Optional: Email service configuration for other providers
# EMAIL_SERVICE=gmail
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587

# Security Configuration
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
FORM_RATE_LIMIT_WINDOW_MS=3600000
FORM_RATE_LIMIT_MAX_REQUESTS=5

# Session Configuration (if using sessions)
SESSION_SECRET=your_session_secret_here

# File Upload Configuration (for future features)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info

# Production specific (set these in production)
# MONGODB_URI=your_production_mongodb_uri
# EMAIL_USER=your_production_email
# EMAIL_PASSWORD=your_production_email_password
# JWT_SECRET=your_production_jwt_secret
# FRONTEND_URL=https://your-domain.com
